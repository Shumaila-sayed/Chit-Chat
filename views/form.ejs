<html>
    <head>
        <title>New Message</title>
    </head>
    <body>
        <div>
            <h1>Enter a New Message!</h1>
            <form method="post" action="/new" >
                <label for="name">
                    Name: 
                    <input type="text" id="name" name="messageUser" required>
                </label>
                <label for="message">
                    Message: 
                    <input type="text" id="message" name="messageText" required>
                </label>
                <input type="submit" value="Submit">
            </form>
        </div>
    </body>
</html>